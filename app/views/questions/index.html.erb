<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Ques</th>
      <th>Opta</th>
      <th>Optb</th>
      <th>Optc</th>
      <th>Optd</th>
      <th>Subgenre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.ques %></td>
        <td><%= question.optA %></td>
        <td><%= question.optB %></td>
        <td><%= question.optC %></td>
        <td><%= question.optD %></td>
        <td><%= question.subgenre.name %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

